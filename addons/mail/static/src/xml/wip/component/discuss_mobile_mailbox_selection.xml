<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div
        class="o_mobile_mailbox_selection"
        owl="1"
        t-name="mail.wip.component.DiscussMobileMailboxSelection">
        <t t-foreach="props.mailboxes" t-as="mailbox">
            <button
                class="btn"
                t-att-class="active(mailbox) ? 'btn-primary' : 'btn-secondary'"
                t-att-data-mailbox-local-id="mailbox.localID"
                t-key="mailbox.localID"
                t-on-click="_onClick"
                type="button">
                <t t-esc="mailbox.name"/>
            </button>
        </t>
    </div>

</templates>
