<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <aside
        class="o_chatter o_wip_owl"
        owl="1"
        t-name="mail.wip.component.Chatter">
        <div
            class="o_chatter_topbar">
            <button
                class="btn btn-link o_chatter_button_new_message"
                t-att-class="state.composerMode === 'send' ? 'o_active' : ''"
                t-on-click="_onClickSend"
                title="Send a message"
                type="button">
                Send message
            </button>
            <button
                class="btn btn-link o_chatter_button_log_note"
                t-att-class="state.composerMode === 'log' ? 'o_active' : ''"
                t-on-click="_onClickLog"
                title="Log a note. Followers will not be notified.">
                Log note
            </button>
            <button
                class="btn btn-link o_chatter_button_schedule_activity"
                t-if="props.mailFields.mail_activity"
                t-on-click="_onClickScheduleActivity"
                title="Log or schedule an activity">
                <i
                    aria-label="Dates"
                    class="fa fa-clock-o"
                    role="img"
                    title="Dates"/> Schedule activity
            </button>
            <div
                class="o_topbar_right_area"
                t-ref="topbarRight"/>
        </div>
        <Composer
           options="composerOptions"
           suggestedRecipients="props.suggestedRecipients"
           t-if="state.composerMode"
           threadLocalID="props.threadLocalID"/>
        <div
            t-if="props.mailFields.mail_activity"
            t-ref="activity"/>
        <Thread
            options="threadOptions"
            t-if="props.thread"
            threadLocalID="props.threadLocalID"/>
    </aside>

</templates>
