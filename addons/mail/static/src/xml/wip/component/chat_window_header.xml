<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div
        class="o_mail_wip_chat_window_header"
        owl="1"
        t-name="mail.wip.component.ChatWindowHeader"
        t-on-click="_onClick">
        <Icon
           class="o_item o_icon"
           t-if="props.thread"
           threadLocalID="props.item"/>
        <div class="o_item o_name"
             t-att-title="name"
             t-key="'name'">
            <t t-esc="name"/>
        </div>
        <div
            class="o_item o_counter"
            t-if="props.thread and props.thread.message_unread_counter > 0"
            t-key="'counter'">
            (<t t-esc="props.thread.message_unread_counter"/>)
        </div>
        <div
            class="o_autogrow"/>
        <div
            class="o_item o_commands">
            <div
                aria-label="Shift left"
                class="o_command o_shift_left"
                t-if="options.shiftLeft"
                t-key="'shift_left'"
                t-on-click.stop="_onClickShiftLeft"
                title="Shift left">
                <i
                    class="fa fa-angle-left"/>
            </div>
            <div
                aria-label="Shift right"
                class="o_command o_shift_right"
                t-if="options.shiftRight"
                t-key="'shift_right'"
                t-on-click.stop="_onClickShiftRight"
                title="Shift right">
                <i
                    class="fa fa-angle-right"/>
            </div>
            <div
                aria-label="Open in Discuss"
                class="o_command o_expand"
                t-if="options.expand"
                t-key="'expand'"
                t-on-click.stop="_onClickExpand"
                title="Open in Discuss">
                <i
                    class="fa fa-expand"/>
            </div>
            <div
                aria-label="Close chat window"
                class="o_command o_close"
                t-on-click.stop="_onClickClose"
                title="Close chat window">
                <i
                    class="fa fa-close"/>
            </div>
        </div>
    </div>

</templates>
