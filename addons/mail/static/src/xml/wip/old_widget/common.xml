<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!--
        @param {string} status
    -->
    <span t-name="mail.wip.userStatus">
        <i t-if="status == 'online'"
           class="o_mail_user_status o_user_online fa fa-circle"
           title="Online"
           role="img"
           aria-label="User is online"/>
        <i t-if="status == 'away'"
           class="o_mail_user_status o_user_idle fa fa-circle"
           title="Idle"
           role="img"
           aria-label="User is idle"/>
        <i t-if="status == 'offline'"
           class="o_mail_user_status fa fa-circle-o"
           title="Offline"
           role="img"
           aria-label="User is offline"/>
        <i t-if="status == 'bot'"
           class="o_mail_user_status o_user_online fa fa-heart"
           title="Bot"
           role="img"
           aria-label="User is a bot"/>
    </span>

</templates>
