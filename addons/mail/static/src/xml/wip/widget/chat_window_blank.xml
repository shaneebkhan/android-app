<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

   <div t-name="mail.wip.widget.ChatWindowBlank" owl="1"
        class="o_chat_window o_blank"
        t-att-class="state.folded ? 'o_folded' : ''">
      <div class="o_wip_chat_window_header"
           t-on-click="_onClickToggleFold">
         <div class="o_name">
            New message
         </div>
         <div class="o_autogrow"/>
         <div class="o_commands">
            <div class="o_command o_close fa fa-close"
               aria-label="Close chat window"
               title="Close chat window"
               t-on-click="_onClickClose"/>
         </div>
      </div>
      <t t-widget="AutocompleteInput"
         t-props="{ html: true, source: _onAutocompleteSource }"
         t-on-select="_onAutocompleteSelect"/>
    </div>

</templates>
