<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div t-name="mail.wip.widget.ChatWindowHeader" owl="1"
         class="o_wip_chat_window_header"
         t-on-click="_onClick">
        <t t-if="props.thread"
           t-widget="Icon"
           t-props="{ threadLID: props.item }"/>
        <div class="o_name"
             t-key="'name'">
            <t t-esc="name"/>
        </div>
        <div t-if="props.thread and props.thread.message_unread_counter > 0"
             class="o_counter"
             t-key="'counter'">
            (<t t-esc="props.thread.message_unread_counter"/>)
        </div>
        <div class="o_autogrow"/>
        <div class="o_commands">
            <div t-if="options.displayLeftShift"
                 class="o_command o_left_shift"
                 aria-label="Shift left"
                 title="Shift left"
                 t-key="'shift_left'"
                 t-on-click="_onClickShiftLeft">
                <i class="fa fa-angle-left"/>
            </div>
            <div t-if="options.displayRightShift"
                 class="o_command o_right_shift"
                 aria-label="Shift right"
                 title="Shift right"
                 t-key="'shift_right'"
                 t-on-click="_onClickShiftRight">
                <i class="fa fa-angle-right"/>
            </div>
            <div t-if="options.displayExpand"
                 class="o_command o_expand"
                 aria-label="Open in Discuss"
                 title="Open in Discuss"
                 t-key="'expand'"
                 t-on-click="_onClickExpand">
                <i class="fa fa-expand"/>
            </div>
            <div class="o_command o_close"
                 aria-label="Close chat window"
                 title="Close chat window"
                 t-on-click="_onClickClose">
                <i class="fa fa-close"/>
            </div>
        </div>
    </div>

</templates>
