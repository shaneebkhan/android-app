<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div t-name="mail.wip.widget.Composer" owl="1"
         class="o_wip_composer"
         t-att-class="options.displayAvatar ? 'o_with_avatar' : ''">
        <div t-if="options.displayAvatar"
             class="o_sidebar">
            <img alt=""
                class="o_avatar rounded-circle"
                t-att-src="userAvatar"/>
        </div>
        <t t-call="mail.wip.widget.composer.Core"/>
    </div>

    <div t-name="mail.wip.widget.composer.Core" owl="1"
         class="o_core">
        <t t-widget="AutoresizeInput"
           t-props="{ options: inputOptions }"
           t-on-keydown="_onInputKeydown"
           t-ref="'input'"/>
        <!-- <textarea class="o_input"
                  placeholder="Write something..."
                  t-on-keydown="_onInputKeydown"
                  t-ref="'input'"/> -->
        <div class="o_commands">
            <t t-widget="EmojisButton"
               t-on-emoji-selection="_onEmojiSelection"/>
            <button class="o_attachment_btn o_command btn btn-secondary fa fa-paperclip"
                    aria-label="Add attachment"
                    title="Add attachment"
                    type="button"
                    t-on-click="_onClickAddAttachment"/>
            <button t-if="options.displaySendButton"
                    class="o_send o_command btn btn-primary"
                    type="button"
                    t-on-click="_onClickSend">
                Send
            </button>
        </div>
    </div>

</templates>
