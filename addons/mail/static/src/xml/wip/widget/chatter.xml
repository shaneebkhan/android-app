<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <aside t-name="mail.wip.widget.Chatter" owl="1"
         class="o_chatter o_wip_owl">

        <div class="o_chatter_topbar">
            <button t-on-click="_onClickSend" type="button" class="btn btn-link o_chatter_button_new_message" t-att-class="state.composerMode === 'send' ? 'o_active' : ''" title="Send a message">
                Send message
            </button>
            <button t-on-click="_onClickLog" class="btn btn-link o_chatter_button_log_note" t-att-class="state.composerMode === 'log' ? 'o_active' : ''" title="Log a note. Followers will not be notified.">
                Log note
            </button>
            <button t-on-click="_onClickScheduleActivity" t-if="props.mailFields.mail_activity" class="btn btn-link o_chatter_button_schedule_activity" title="Log or schedule an activity">
                <i class="fa fa-clock-o" role="img" aria-label="Dates" title="Dates"/> Schedule activity
            </button>
            <div class="o_topbar_right_area" t-ref="topbarRight"/>
        </div>

        <t t-widget="Composer"
           t-if="state.composerMode"
           threadLID="props.threadLID"
           suggestedRecipients="props.suggestedRecipients"
           options="composerOptions"/>

        <div t-if="props.mailFields.mail_activity" t-ref="activity"/>

        <t t-widget="Thread"
           t-if="props.thread"
           threadLID="props.threadLID"
           options="threadOptions"/>
    </aside>

</templates>
