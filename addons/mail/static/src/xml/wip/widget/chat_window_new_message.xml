<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

   <div t-name="mail.wip.widget.ChatWindowNewMessage" owl="1"
        class="o_chat_window o_new_message"
        t-attf-class="{{ state.folded ? 'o_folded' : '' }} {{ state.focused ? 'o_focused' : '' }}"
        t-att-id="id"
        t-on-click="_onClick">
      <!-- header layout duplicates ChatWindowHeader due to lack of xpatch... -->
      <div class="o_wip_chat_window_header"
           t-on-click="_onClickToggleFold">
         <div class="o_name">
            New message
         </div>
         <div class="o_autogrow"/>
         <div class="o_commands">
            <div class="o_command o_close"
                 aria-label="Close chat window"
                 title="Close chat window"
                 t-on-click="_onClickClose">
               <i class="fa fa-close"/>
            </div>
         </div>
      </div>
      <div class="o_selection">
         <span class="o_label">
            To:
         </span>
         <t t-widget="AutocompleteInput"
            t-props="{ html: true, source: _onAutocompleteSource }"
            t-ref="'input'"
            t-on-select="_onAutocompleteSelect"/>
      </div>
    </div>

</templates>
