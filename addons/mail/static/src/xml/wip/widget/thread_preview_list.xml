<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div t-name="mail.wip.widget.ThreadPreviewList" owl="1"
         class="o_mail_wip_thread_preview_list">
        <div t-if="props.threadLIDs.length === 0" class="o_no_conversation">
            No conversation yet...
        </div>
        <t t-else="">
            <t t-foreach="props.threadLIDs"
               t-as="threadLID"
               t-widget="ThreadPreview"
               t-key="threadLID"
               threadLID="threadLID"
               t-on-clicked="_onClickedPreview"/>
        </t>
    </div>

</templates>
