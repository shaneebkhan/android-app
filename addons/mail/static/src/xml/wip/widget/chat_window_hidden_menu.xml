<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div t-name="mail.wip.widget.ChatWindowHiddenMenu" owl="1"
         class="o_hidden_menu dropup"
         t-att-data-id="id">
        <div class="dropdown-toggle"
             t-att-class="state.toggleShow ? 'show' : ''"
             t-on-click="_onClickToggle">
            <div class="o_item o_icon fa fa-comments-o"/>
            <div class="o_item o_window_counter">
                <t t-esc="props.items.length"/>
            </div>
        </div>
        <ul t-ref="list"
            class="o_list dropdown-menu dropdown-menu-right"
            t-att-class="state.toggleShow ? 'show' : ''"
            role="menu">
            <t t-foreach="props.items"
               t-as="item">
               <li class="o_item"
                   role="menuitem"
                   t-key="'li_' + item">
                    <t t-widget="ChatWindowHeader"
                       class="o_chat_window_header"
                       options="itemOptions"
                       item="item"
                       t-key="'item_' + item"
                       t-on-clicked="_onClickedItem"
                       t-on-close="_onCloseItem"/>
                </li>
            </t>
        </ul>
        <div t-if="unreadCounter > 0"
             class="o_unread_counter badge badge-pill"
             t-key="'unread_counter'">
            <t t-esc="unreadCounter"/>
        </div>
    </div>

</templates>
