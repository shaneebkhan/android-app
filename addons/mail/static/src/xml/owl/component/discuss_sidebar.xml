<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div
        class="o_mail_component_DiscussSidebar"
        owl="1"
        t-name="mail.component.DiscussSidebar">
        <div
            class="
                o_mail_component_DiscussSidebar__group
                o_mail_component_DiscussSidebar__groupMailbox"
            t-key="'mailbox'">
            <t t-foreach="props.mailboxes" t-as="mailbox">
                <SidebarItem
                   class="o_mail_component_DiscussSidebar__item"
                   isActive="props.threadLocalID === mailbox.localID"
                   threadLocalID="mailbox.localID"
                   t-key="mailbox.localID"
                   t-on-clicked="_onClickedItem"/>
            </t>
        </div>
        <hr
            class="o_mail_component_DiscussSidebar__separator"
            t-key="'separator'"/>
        <input
            class="o_mail_component_DiscussSidebar__quickSearch"
            placeholder="Quick search..."
            t-if="props.mailChannelAmount > 19"
            t-key="'quickSearch'"
            t-on-input.stop="_onInputQuickSearch"
            t-ref="quickSearch"/>
        <div
            class="
                o_mail_component_DiscussSidebar__group
                o_mail_component_DiscussSidebar__groupChannel"
            t-key="'channel'">
            <div
                class="o_mail_component_DiscussSidebar__groupHeader">
                <div
                    class="
                        o_clickable
                        o_mail_component_DiscussSidebar__groupHeaderItem
                        o_mail_component_DiscussSidebar__groupTitle"
                    t-on-click.stop="_onClickChannelTitle">
                    Channels
                </div>
                <div class="o_autogrow"/>
                <div
                    class="
                        fa
                        fa-plus
                        o_mail_component_DiscussSidebar__groupHeaderItem
                        o_mail_component_DiscussSidebar__groupHeaderItemAdd"
                    title="Add or join a channel"
                    t-on-click.stop="_onClickChannelAdd"/>
            </div>
            <div
                class="o_mail_component_DiscussSidebar__list">
                <div
                    class="
                        o_mail_component_DiscussSidebar__item
                        o_mail_component_DiscussSidebar__itemNew"
                    t-if="state.isAddingChannel"
                    t-key="'add_item_channel'">
                    <AutocompleteInput
                        class="o_mail_component_DiscussSidebar__itemNewInput"
                        focusOnMount="true"
                        html="true"
                        select="_onChannelAutocompleteSelect"
                        source="_onChannelAutocompleteSource"
                        t-on-hide.stop="_onHideAddChannel"/>
                </div>
                <t t-foreach="quickSearchChannels" t-as="channel">
                    <SidebarItem
                        class="o_mail_component_DiscussSidebar__item"
                        isActive="props.threadLocalID === channel.localID"
                        threadLocalID="channel.localID"
                        t-on-clicked="_onClickedItem"
                        t-key="channel.localID"/>
                </t>
            </div>
        </div>
        <div
            class="
                o_mail_component_DiscussSidebar__group
                o_mail_component_DiscussSidebar__groupChat"
            t-key="'chat'">
            <div
                class="o_mail_component_DiscussSidebar__groupHeader">
                <div
                    class="
                        o_mail_component_DiscussSidebar__groupHeaderItem
                        o_mail_component_DiscussSidebar__groupTitle">
                    Direct Messages
                </div>
                <div
                    class="o_autogrow"/>
                <div
                    class="
                        fa
                        fa-plus
                        o_mail_component_DiscussSidebar__groupHeaderItem
                        o_mail_component_DiscussSidebar__groupHeaderItemAdd"
                    title="Start a conversation"
                    t-on-click.stop="_onClickChatAdd"/>
            </div>
            <div
                class="o_mail_component_DiscussSidebar__list">
                <div
                    class="
                        o_mail_component_DiscussSidebar__item
                        o_mail_component_DiscussSidebar__itemNew"
                    t-if="state.isAddingChat"
                    t-key="'add_item_chat'">
                    <AutocompleteInput
                       focusOnMount="true"
                       select="_onChatAutocompleteSelect"
                       source="_onChatAutocompleteSource"
                       t-on-hide.stop="_onHideAddChat"/>
                </div>
                <t t-foreach="quickSearchChats" t-as="chat">
                    <SidebarItem
                       class="o_mail_component_DiscussSidebar__item"
                       isActive="props.threadLocalID === chat.localID"
                       threadLocalID="chat.localID"
                       t-on-clicked="_onClickedItem"
                       t-key="chat.localID"/>
                </t>
            </div>
        </div>
    </div>

</templates>
