<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div
        class="o_mail_component_ChatWindowHeader"
        owl="1"
        t-name="mail.component.ChatWindowHeader"
        t-on-click="_onClick">
        <Icon
            class="
                o_mail_component_ChatWindowHeader__icon
                o_mail_component_ChatWindowHeader__item"
            threadLocalID="props.item"
            t-if="props.thread"/>
        <div
            class="
                o_mail_component_ChatWindowHeader__item
                o_mail_component_ChatWindowHeader__name"
            t-att-title="name"
            t-key="'name'">
            <t t-esc="name"/>
        </div>
        <div
            class="
                o_mail_component_ChatWindowHeader__counter
                o_mail_component_ChatWindowHeader__item"
            t-if="props.thread and props.thread.message_unread_counter > 0"
            t-key="'counter'">
            (<t t-esc="props.thread.message_unread_counter"/>)
        </div>
        <div
            class="o_autogrow"/>
        <div
            class="
                o_mail_component_ChatWindowHeader__commands
                o_mail_component_ChatWindowHeader__item">
            <div
                aria-label="Shift left"
                class="
                    o_mail_component_ChatWindowHeader__command
                    o_mail_component_ChatWindowHeader__commandShiftLeft"
                title="Shift left"
                t-if="options.shiftLeft"
                t-key="'shift_left'"
                t-on-click.stop="_onClickShiftLeft">
                <i
                    class="
                        fa
                        fa-angle-left"/>
            </div>
            <div
                aria-label="Shift right"
                class="
                    o_mail_component_ChatWindowHeader__command
                    o_mail_component_ChatWindowHeader__commandShiftRight"
                title="Shift right"
                t-if="options.shiftRight"
                t-key="'shift_right'"
                t-on-click.stop="_onClickShiftRight">
                <i
                    class="
                        fa
                        fa-angle-right"/>
            </div>
            <div
                aria-label="Open in Discuss"
                class="
                    o_mail_component_ChatWindowHeader__command
                    o_mail_component_ChatWindowHeader__commandExpand"
                title="Open in Discuss"
                t-if="options.expand"
                t-key="'expand'"
                t-on-click.stop="_onClickExpand">
                <i
                    class="
                        fa
                        fa-expand"/>
            </div>
            <div
                aria-label="Close chat window"
                class="
                    o_mail_component_ChatWindowHeader__command
                    o_mail_component_ChatWindowHeader__commandClose"
                title="Close chat window"
                t-on-click.stop="_onClickClose">
                <i
                    class="
                        fa
                        fa-close"/>
            </div>
        </div>
    </div>

</templates>
