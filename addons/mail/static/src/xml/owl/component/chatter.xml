<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <aside
        class="
            o_chatter
            o_mail_component_Chatter"
        owl="1"
        t-name="mail.component.Chatter">
        <div
            class="
                o_chatter_topbar
                o_mail_component_Chatter__topbar">
            <button
                class="
                    btn
                    btn-link
                    o_chatter_button_new_message
                    o_mail_component_Chatter__buttonNewMessage"
                title="Send a message"
                type="button"
                t-att-class="{
                    o_active: state.composerMode === 'send',
                }"
                t-on-click="_onClickSend">
                Send message
            </button>
            <button
                class="
                    btn
                    btn-link
                    o_mail_component_Chatter__buttonLogNote"
                title="Log a note. Followers will not be notified."
                t-att-class="{
                    o_active: state.composerMode === 'log',
                }"
                t-on-click="_onClickLog">
                Log note
            </button>
            <button
                class="
                    btn
                    btn-link
                    o_chatter_button_schedule_activity
                    o_mail_component_Chatter__buttonScheduleActivity"
                title="Log or schedule an activity"
                t-if="props.mailFields.mail_activity"
                t-on-click="_onClickScheduleActivity">
                <i
                    aria-label="Dates"
                    class="
                        fa
                        fa-clock-o"
                    role="img"
                    title="Dates"/> Schedule activity
            </button>
            <div
                class="
                    o_topbar_right_area
                    o_mail_component_Chatter__topbarRightArea"
                t-ref="topbarRight"/>
        </div>
        <Composer
            class="o_mail_component_Chatter__composer"
            options="composerOptions"
            suggestedRecipients="props.suggestedRecipients"
            threadLocalID="props.threadLocalID"
            t-if="state.composerMode"/>
        <div
            t-if="props.mailFields.mail_activity"
            t-ref="activity"/>
        <Thread
            class="o_mail_component_Chatter__thread"
            options="threadOptions"
            threadLocalID="props.threadLocalID"
            t-if="props.thread"/>
    </aside>

</templates>
