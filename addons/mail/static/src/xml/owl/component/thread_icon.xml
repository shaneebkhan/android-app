<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div
        class="o_mail_component_thread_icon"
        owl="1"
        t-name="mail.component.ThreadIcon">
        <t t-if="props.thread.channel_type === 'channel'">
            <div
                class="fa fa-lock"
                t-if="props.thread.public === 'private'"
                title="Private channel"/>
            <div
                class="fa fa-hashtag"
                t-else=""
                title="Public channel"/>
        </t>
        <t t-elif="props.thread.channel_type === 'chat'">
            <div
                class="fa fa-circle o_online"
                t-if="props.directPartner.im_status === 'online'"
                title="Online"/>
            <div
                class="fa fa-circle-o o_offline"
                t-elif="props.directPartner.im_status === 'offline'"
                title="Offline"/>
            <div
                class="fa fa-circle o_away"
                t-elif="props.directPartner.im_status === 'away'"
                title="Away"/>
            <div
                class="o_typing"
                t-elif="props.thread.typingMemberLocalIDs.includes(props.thread.directPartnerLocalID)"
                title="Is typing...">
                <span class="o_dot"/>
                <span class="o_dot"/>
                <span class="o_dot"/>
            </div>
            <div
                class="fa fa-heart o_online"
                t-elif="props.directPartner.im_status === 'bot'"
                title="Bot"/>
            <div
                class="fa fa-question-circle"
                t-else=""
                title="No IM status available"/>
        </t>
        <t t-elif="props.thread._model === 'mail.box'">
            <div
                class="fa fa-inbox"
                t-if="props.thread.localID === 'mail.box_inbox'"/>
            <div
                class="fa fa-star-o"
                t-elif="props.thread.localID === 'mail.box_starred'"/>
            <div
                class="fa fa-envelope"
                t-elif="props.thread.localID === 'mail.box_moderation'"/>
        </t>
    </div>

</templates>
