<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div
        class="o_mail_component_AttachmentViewer"
        owl="1"
        tabindex="0"
        t-att-data-dialog-id="props.dialogID"
        t-name="mail.component.AttachmentViewer"
        t-on-click="_onClick"
        t-on-keydown="_onKeydown">
        <div
            class="o_mail_component_AttachmentViewer__header"
            t-on-click="_onClickHeader">
            <div
                class="
                    o_mail_component_AttachmentViewer__headerItem
                    o_mail_component_AttachmentViewer__icon"
                t-if="props.attachment.fileType"
                t-key="'icon'">
                <i
                    aria-label="Image"
                    class="
                        fa
                        fa-picture-o"
                    role="img"
                    title="Image"
                    t-if="props.attachment.fileType === 'image'"/>
                <i
                    aria-label="PDF file"
                    class="
                        fa
                        fa-file-text"
                    role="img"
                    title="PDF file"
                    t-if="props.attachment.fileType === 'application/pdf'"/>
                <i
                    aria-label="Text file"
                    class="
                        fa
                        fa-file-text"
                    role="img"
                    title="Text file"
                    t-if="props.attachment.isTextFile"/>
                <i
                    aria-label="Video"
                    class="
                        fa
                        fa-video-camera"
                    role="img"
                    title="Video"
                    t-if="props.attachment.fileType === 'video'"/>
            </div>
            <div
                class="
                    o_mail_component_AttachmentViewer__headerItem
                    o_mail_component_AttachmentViewer__name">
                <t t-esc="props.attachment.displayName"/>
            </div>
            <div
                class="
                    o_mail_component_AttachmentViewer__buttonDownload
                    o_mail_component_AttachmentViewer__headerItem
                    o_mail_component_AttachmentViewer__headerItemButton"
                role="button"
                title="Download"
                t-on-click.stop="_onClickDownload">
                <i
                    aria-label="Download"
                    class="
                        fa
                        fa-download
                        fa-fw"
                    role="img"/>
            </div>
            <div
                class="o_autogrow"/>
            <div
                aria-label="Close"
                class="
                    o_mail_component_AttachmentViewer__headerItem
                    o_mail_component_AttachmentViewer__headerItemButton
                    o_mail_component_AttachmentViewer__headerItemButtonClose"
                role="button"
                title="Close (Esc)"
                t-on-click="_onClickClose">
                <i
                    aria-label="Close"
                    class="
                        fa
                        fa-fw
                        fa-times"
                    role="img"/>
            </div>
        </div>
        <div
            class="o_mail_component_AttachmentViewer__main"
            t-att-class="{
                o_with_img: props.attachment.fileType === 'image',
            }"
            t-on-mousemove="_onMousemoveView">
            <div
                class="o_mail_component_AttachmentViewer__zoomer"
                t-if="props.attachment.fileType === 'image'"
                t-ref="zoomer">
                <div
                    class="o_mail_component_AttachmentViewer__loading"
                    t-if="state.imageLoading">
                    <i
                        aria-label="Loading"
                        class="
                            fa
                            fa-3x
                            fa-circle-o-notch
                            fa-fw
                            fa-spin"
                        role="img"
                        title="Loading"/>
                </div>
                <img
                    alt="Viewer"
                    class="
                        o_mail_component_AttachmentViewer__view
                        o_mail_component_AttachmentViewer__viewImage"
                    draggable="false"
                    t-att-src="props.attachment.defaultSource"
                    t-att-style="imageStyle"
                    t-on-click="_onClickImage"
                    t-on-mousedown="_onMousedownImage"
                    t-on-wheel.stop="_onWheelImage"
                    t-key="props.info.attachmentLocalID"
                    t-ref="image"/>
            </div>
            <iframe
                class="
                    o_mail_component_AttachmentViewer__view
                    o_mail_component_AttachmentViewer__viewPdf"
                t-att-src="props.attachment.defaultSource"
                t-if="props.attachment.fileType === 'application/pdf'"
                t-key="props.info.attachmentLocalID"/>
            <iframe
                class="
                    o_mail_component_AttachmentViewer__view
                    o_mail_component_AttachmentViewer__viewIframe
                    o_text"
                t-att-src="props.attachment.defaultSource"
                t-if="props.attachment.isTextFile"
                t-key="props.info.attachmentLocalID"/>
            <iframe
                allow="autoplay; encrypted-media"
                class="
                    o_mail_component_AttachmentViewer__youtube
                    o_mail_component_AttachmentViewer__view
                    o_mail_component_AttachmentViewer__viewIframe"
                height="315"
                t-att-src="props.attachment.defaultSource"
                t-if="props.attachment.fileType === 'youtu'"
                t-key="props.info.attachmentLocalID"
                width="560"/>
            <video
                class="
                    o_mail_component_AttachmentViewer__view
                    o_mail_component_AttachmentViewer__viewVideo"
                controls="controls"
                t-if="props.attachment.fileType === 'video'"
                t-key="props.info.attachmentLocalID"
                t-on-click="_onClickVideo">
                <source
                    t-att-data-type="props.attachment.mimetype"
                    t-att-src="props.attachment.defaultSource"/>
            </video>
        </div>
        <div
            class="o_mail_component_AttachmentViewer__toolbar"
            role="toolbar"
            t-if="props.attachment.fileType === 'image'"
            t-key="'toolbar'">
            <div
                class="o_mail_component_AttachmentViewer__toolbarButton"
                role="button"
                title="Zoom In (+)"
                t-on-click.stop="_onClickZoomIn">
                <i
                    aria-label="Zoom In"
                    class="
                        fa
                        fa-fw
                        fa-plus"
                    role="img"/>
            </div>
            <div
                class="o_mail_component_AttachmentViewer__toolbarButton"
                role="button"
                title="Reset Zoom (0)"
                t-att-class="{
                    o_disabled: state.scale === 1,
                }"
                t-on-click.stop="_onClickZoomReset">
                <i
                    aria-label="Reset Zoom"
                    class="
                        fa
                        fa-fw
                        fa-search"
                    role="img"/>
            </div>
            <div
                class="o_mail_component_AttachmentViewer__toolbarButton"
                role="button"
                title="Zoom Out (-)"
                t-att-class="{
                    o_disabled: state.scale === MIN_SCALE,
                }"
                t-on-click.stop="_onClickZoomOut">
                <i
                    aria-label="Zoom Out"
                    class="
                        fa
                        fa-fw
                        fa-minus"
                    role="img"/>
            </div>
            <div
                class="o_mail_component_AttachmentViewer__toolbarButton"
                role="button"
                title="Rotate (r)"
                t-on-click.stop="_onClickRotate">
                <i
                    aria-label="Rotate"
                    class="
                        fa
                        fa-fw
                        fa-repeat"
                    role="img"/>
            </div>
            <div
                class="o_mail_component_AttachmentViewer__toolbarButton"
                role="button"
                title="Print"
                t-on-click.stop="_onClickPrint">
                <i
                    aria-label="Print"
                    class="
                        fa
                        fa-fw
                        fa-print"
                    role="img"/>
            </div>
            <div
                class="
                    o_mail_component_AttachmentViewer__buttonDownload
                    o_mail_component_AttachmentViewer__toolbarButton"
                role="button"
                title="Download"
                t-on-click.stop="_onClickDownload">
                <i
                    aria-label="Download"
                    class="
                        fa
                        fa-download
                        fa-fw"
                    role="img"/>
            </div>
        </div>
        <t t-if="props.info.attachmentLocalIDs.length > 1">
            <div
                class="
                    o_mail_component_AttachmentViewer__buttonNavigation
                    o_mail_component_AttachmentViewer__buttonNavigationPrevious"
                role="button"
                title="Previous (Left-Arrow)"
                t-key="'previous'"
                t-on-click.stop="_onClickPrevious">
                <span
                    aria-label="Previous"
                    class="
                        fa
                        fa-chevron-left"
                    role="img"/>
            </div>
            <div
                class="
                    o_mail_component_AttachmentViewer__buttonNavigation
                    o_mail_component_AttachmentViewer__buttonNavigationNext"
                role="button"
                title="Next (Right-Arrow)"
                t-key="'next'"
                t-on-click.stop="_onClickNext">
                <span
                    aria-label="Next"
                    class="
                        fa
                        fa-chevron-right"
                    role="img"/>
            </div>
        </t>
    </div>

</templates>
