<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div
        class="o_mail_component_ThreadPreviewList"
        owl="1"
        t-name="mail.component.ThreadPreviewList">
        <div
            class="o_mail_component_ThreadPreviewList__noConversation"
            t-if="props.threadLocalIDs.length === 0">
            No conversation yet...
        </div>
        <t t-else="">
            <ThreadPreview
                class="o_mail_component_ThreadPreviewList__preview"
                threadLocalID="threadLocalID"
                t-as="threadLocalID"
                t-foreach="props.threadLocalIDs"
                t-key="threadLocalID"
                t-on-clicked="_onClickedPreview"/>
        </t>
    </div>

</templates>
