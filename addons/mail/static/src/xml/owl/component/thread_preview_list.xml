<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div
        class="o_mail_component_thread_preview_list"
        owl="1"
        t-name="mail.component.ThreadPreviewList">
        <div
            class="o_no_conversation"
            t-if="props.threadLocalIDs.length === 0">
            No conversation yet...
        </div>
        <t t-else="">
            <ThreadPreview
               t-as="threadLocalID"
               t-foreach="props.threadLocalIDs"
               t-key="threadLocalID"
               t-on-clicked="_onClickedPreview"
               threadLocalID="threadLocalID"/>
        </t>
    </div>

</templates>
