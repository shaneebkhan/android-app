<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div
        class="
            dropup
            o_mail_component_ChatWindowHiddenMenu"
        owl="1"
        t-att-data-id="id"
        t-name="mail.component.ChatWindowHiddenMenu">
        <div
            class="
                dropdown-toggle
                o_mail_component_ChatWindowHiddenMenu__dropdownToggle"
            t-att-class="{
                show: state.toggleShow,
            }"
            t-on-click.stop="_onClickToggle">
            <div
                class="
                    fa
                    fa-comments-o
                    o_mail_component_ChatWindowHiddenMenu__dropdownToggleIcon
                    o_mail_component_ChatWindowHiddenMenu__dropdownToggleItem"/>
            <div
                class="
                    o_mail_component_ChatWindowHiddenMenu__dropdownToggleItem
                    o_mail_component_ChatWindowHiddenMenu__windowCounter">
                <t t-esc="props.items.length"/>
            </div>
        </div>
        <ul
            class="
                dropdown-menu
                dropdown-menu-right
                o_mail_component_ChatWindowHiddenMenu__list"
            role="menu"
            t-att-class="{
                show: state.toggleShow,
            }"
            t-ref="list">
            <t t-foreach="props.items" t-as="item">
                <li
                    class="o_mail_component_ChatWindowHiddenMenu__listItem"
                    role="menuitem"
                    t-key="'li_' + item">
                    <ChatWindowHeader
                        class="o_mail_component_ChatWindowHiddenMenu__listItemComponent"
                        options="itemOptions"
                        item="item"
                        t-key="'item_' + item"
                        t-on-clicked="_onClickedItem"
                        t-on-close="_onCloseItem"/>
                </li>
            </t>
        </ul>
        <div
            class="
                badge
                badge-pill
                o_mail_component_ChatWindowHiddenMenu__unreadCounter"
            t-if="unreadCounter > 0"
            t-key="'unreadCounter'">
            <t t-esc="unreadCounter"/>
        </div>
    </div>

</templates>
