<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!--
        @param {mail.widget.Discuss} widget
    -->
    <div
        t-name="mail.widget.Discuss"
        class="o_mail_widget_discuss"/>

    <!-- @param {boolean} isMobile -->
    <div t-name="mail.widget.DiscussControlButtons">
        <button
            class="
                btn
                btn-primary
                o_hidden
                o_invite
            "
            title="Invite people"
            type="button">Invite</button>
        <button
            class="
                btn
                btn-secondary
                o_mark_all_read
                o_hidden
            "
            title="Mark all as read"
            type="button">Mark all read</button>
        <button
            class="
                btn
                btn-secondary
                o_hidden
                o_unstar_all
            "
            title="Unstar all messages"
            type="button">Unstar all</button>
        <button
            class="
                btn
                btn-secondary
                o_hidden
                o_new_message
            "
            title="New Message"
            type="button">New Message</button>
        <button
            class="
                btn
                btn-secondary
                o_hidden
                o_new_channel
            "
            type="button"
            title="New Channel">New Channel</button>
    </div>

</templates>
