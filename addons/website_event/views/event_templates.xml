<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="index" name="Events">
    <t t-call="website.layout">
        <div id="wrap">

            <t t-set="opt_index_next_event" t-value="False"/>
            <t t-set="opt_index_topbar" t-value="False"/>
            <t t-set="opt_index_events_list" t-value="False"/>
            <t t-set="opt_index_sidebar" t-value="False"/>

            <!-- Drag/Drop Area -->
            <div class="oe_structure" id="oe_structure_website_event_index_1"/>

            <!-- Events List + Sidebar -->
            <section id="o_we_main">
                <div class="container">
                    <div class="row">
                        <div id="o_we_main_col" class="col my-3"/>
                    </div>
                </div>
            </section>

            <!-- Drag/Drop Area -->
            <div class="oe_structure" id="oe_structure_website_event_index_3"/>

        </div>
    </t>
</template>

<template id="sidebar" name="Right Sidebar">
    <div id="o_we_sidebar" t-attf-class="col-sm-12 col-md-3 col-lg-4 #{_classes}">
        <t t-raw="0"/>
    </div>
</template>

<template id="topbar" name="Top Bar">
    <section id="o_we_topbar" t-attf-class="navbar bg-200 #{_classes}">
        <div class="container justify-content-start py-2">
            <t t-raw="0"/>
        </div>
    </section>
</template>

<template id="events_list" name="Events List">
    <t t-set="opt_events_list_columns" t-value="False"/>
    <t t-set="opt_events_list_cards" t-value="False"/>
    <t t-set="opt_events_list_images" t-value="False"/>
    <t t-set="opt_events_list_speakers" t-value="False"/>

    <t t-if="opt_events_list_columns" t-set="opt_event_size" t-value="'col-12 col-md-6' if opt_index_sidebar else 'col-12 col-sm-6 col-lg-4'"/>
    <t t-else="" t-set="opt_event_size" t-value="'col-xl-10 offset-xl-1' if opt_index_sidebar else 'col-lg-10 col-xl-6 offset-xl-1'"/>

    <div t-attf-class="row #{'border-right border-400' if opt_index_sidebar and not opt_events_list_columns else ''}">
        <!-- No events -->
        <div t-if="not event_ids" class="col-12 my-3">
            <span class="h2">No events found.</span>
            <div  class="alert alert-success mt-3" groups="event.group_event_manager">
                <p class="m-0">Use the top button '<b>+ New</b>' to create your first event.</p>
            </div>
        </div>
        <!-- Events Loop -->
        <t t-call="website_event.events_list_loop"/>
    </div>
    <!-- Pager -->
    <div class="row">
        <!-- TODO - Add t-if condition for o_index_pager -->
        <div id="o_index_pager" class="form-inline justify-content-center my-3">
            <t t-call="website.pager"/>
        </div>
    </div>
</template>

<template id="layout" name="Layout">
    <t t-call="website.layout">
        <div id="wrap" class="o_website_event js_event">
            <t t-raw="0"/>
            <!-- <div class="oe_structure" id="oe_structure_website_event_layout_1"/> -->
      </div>
    </t>
</template>

<template id="default_page">
    <t t-call="website.layout">
        <div class="oe_structure oe_empty"/>
    </t>
</template>

<template id="404">
    <t t-call="website.layout">
        <div id="wrap">
            <div class="oe_structure oe_empty">
                <div class="container">
