                <i class="fa fa-flag"/> Events from Your Country
            </h5>
        </div>
    </div>
</template>

<!-- Sidebar - Country -->
<template id="country_events_list" name="Country">
    <t t-ignore="true">
        <t t-if="events">
            <div class="country_events_list my-3 mt-5 pl-5">

                    <!-- <img class="img-fluid" t-att-src="website.image_url(country, 'image')" alt=""/> -->
                    <h6 t-if="country" class="mb-3">Events: <b t-esc="country.name"/></h6>
<h6 t-else="" class="text-uppercase pb-2 mb-3 font-weight-bold">Upcoming Events</h6>
                <div t-foreach="events[:5]" t-as="event_dict" class="toast show my-2">
                    <div class="toast-header"><span t-esc="event_dict['date']"/></div>
                    <div class="toast-body">
                        <t t-if="not event_dict['event'].website_published">
                            <span class="badge badge-danger" role="img" aria-label="Attention: not published" title="Not published"><i class="fa fa-ban"></i></span>
                        </t>
                        <t t-if="not event_dict['event'].address_id">
                            <i class="fa fa-cloud" title="It is an online event" role="img" aria-label="It is an online event"></i>
                        </t>
                        <a t-att-href="event_dict['url']"><t t-esc="event_dict['event'].name"/></a>
                    </div>
                </div>
                <div t-if="len(events) &gt; 5" class="text-right mt-3">
                    <a t-if="country" t-att-href="'/event?country='+str(country.id)" class="small text-muted">See all events from <span t-esc="country.name"/></a>
                    <a t-else="" href="/event" class="small text-muted">See all upcoming events</a>
                </div>
            </div>
        </t>
    </t>
</template>

<!-- Replace snippet demo with actual snippet and options -->
<template id="remove_external_snippets" inherit_id="website.external_snippets">
    <xpath expr="//t[@t-install='website_event']" position="replace"/>
