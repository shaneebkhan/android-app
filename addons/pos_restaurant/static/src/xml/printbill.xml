<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="BillScreenWidget">
        <div class='receipt-screen screen'>
            <div class='screen-content'>
                <div class='top-content'>
                    <span class='button back'>
                        <i class='fa fa-angle-double-left'></i>
                        Back
                    </span>
                    <h1>Bill Printing</h1>
                    <span class='button next'>
                        Ok
                        <i class='fa fa-angle-double-right'></i>
                    </span>
                </div>
                <div class="centered-content">
                    <div class="button print">
                        <i class='fa fa-print'></i> Print
                    </div>
                    <div class="pos-receipt-container">
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="PrintBillButton">
        <span class="control-button order-printbill">
            <i class="fa fa-print"></i>
            Bill
        </span>
    </t>

    <t t-name="BillReceipt">
        <div class="receipt" style="width: 80mm;">
            <t t-if='receipt.company.logo'>
                <img t-att-src='receipt.company.logo' alt="Logo" style="width: 60%; display: block; margin: 0 auto;"/>
                <br/>
            </t>
            <t t-if='!receipt.company.logo'>
                <h1 style="text-align: center;">
                    <t t-esc='receipt.company.name' />
                </h1>
                <br/>
            </t>
            <div style="text-align: center; font-size: 75%;">
                <t t-if='receipt.company.contact_address'>
                    <div><t t-esc='receipt.company.contact_address' /></div>
                </t>
                <t t-if='receipt.company.phone'>
                    <div>Tel:<t t-esc='receipt.company.phone' /></div>
                </t>
                <t t-if='receipt.company.vat'>
                    <div><t t-esc="receipt.company.vat_label or 'Tax ID'"/>:<t t-esc='receipt.company.vat' /></div>
                </t>
                <t t-if='receipt.company.email'>
                    <div><t t-esc='receipt.company.email' /></div>
                </t>
                <t t-if='receipt.company.website'>
                    <div><t t-esc='receipt.company.website' /></div>
                </t>
                <t t-if='receipt.header'>
                    <div><t t-esc='receipt.header' /></div>
                </t>
                <t t-if='receipt.cashier'>
                    <div class='cashier'>
                        <div>--------------------------------</div>
                        <div>Served by <t t-esc='receipt.cashier' /></div>
                    </div>
                </t>
            </div>
            <br /><br />

            <!-- Orderlines -->

            <div class='orderlines'>
                <t t-foreach='receipt.orderlines' t-as='line'>
                    <t t-set='simple' t-value='line.discount === 0 and line.unit_name === "Unit(s)" and line.quantity === 1' />
                    <t t-if='simple'>
                        <div>
                            <t t-esc='line.product_name' />
                            <span t-esc='widget.format_currency_no_symbol(line.price_display)' style="float: right;"/>
                        </div>
                    </t>
                    <t t-if='!simple'>
                        <div><t t-esc='line.product_name' /></div>
                        <t t-if='line.discount !== 0'>
                            <div style="padding-left: 2em;">Discount: <t t-esc='line.discount'/>%</div>
                        </t>
                        <div style="padding-left: 2em;">
                            <t t-esc='Math.round(line.quantity * 1000) / 1000' />
                            <t t-if='line.unit_name !== "Unit(s)"'>
                                <t t-esc='line.unit_name' />
                            </t>
                            x
                            <t t-esc='widget.format_currency_no_symbol(line.price)'/>
                            <span t-esc='widget.format_currency_no_symbol(line.price_display)' class="price-display" style="float:right;"/>
                        </div>
                    </t>
                </t>
            </div>

            <!-- Subtotal -->
            <t t-set='taxincluded' t-value='Math.abs(receipt.subtotal - receipt.total_with_tax) &lt;= 0.000001' />
            <t t-if='!taxincluded'>
                <div style="float:right;">--------</div>
                <div>Subtotal<span t-esc='widget.format_currency_no_symbol(receipt.subtotal)' style="float:right;"/></div>
                <t t-foreach='receipt.tax_details' t-as='tax'>
                    <div>
                        <t t-esc='tax.name' />
                        <span t-esc='widget.format_currency_no_symbol(tax.amount)' style="float:right;"/>
                    </div>
                </t>
            </t>

            <!-- Total -->

            <div style="float:right;">--------</div>
            <div style="font-size: 125%">
                <span style="padding-left: 5em;">TOTAL</span>
                <span t-esc='widget.format_currency_no_symbol(receipt.total_with_tax)' style="float:right;"/>
            </div>
            <br/><br/>

            <!-- Extra Payment Info -->

            <t t-if='receipt.total_discount'>
                <div>
                    Discounts
                    <span t-esc='widget.format_currency_no_symbol(receipt.total_discount)' style="float:right;"/>
                </div>
            </t>
            <t t-if='taxincluded'>
                <t t-foreach='receipt.tax_details' t-as='tax'>
                    <div>
                        <t t-esc='tax.name' />
                        <span t-esc='widget.format_currency_no_symbol(tax.amount)' style="float:right;"/>
                    </div>
                </t>
            </t>

            <!-- Footer -->
            <t t-if='receipt.footer_html'>
                <t t-raw='receipt.footer_html' style="text-align: center;"/>
            </t>

            <t t-if='!receipt.footer_html and receipt.footer'>
                <br/>
                <t t-esc='receipt.footer' style="text-align: center;"/>
                <br/>
                <br/>
            </t>

            <br/>
            <div class="ticket-date" style="text-align: center; font-size: 75%;">
                <div><t t-esc='receipt.name' /></div>
                <div><t t-esc='receipt.date.localestring' /></div>
            </div>

        </div>
    </t>

</templates>
