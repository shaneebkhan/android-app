<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="SubmitOrderButton">
        <span class="control-button order-submit">
            <i class="fa fa-cutlery"></i>
            Order
        </span>
    </t>

    <t t-name="NameWrapped">
        <t t-foreach="change.name_wrapped.slice(1)" t-as="wrapped_line">
            <div>
                <span t-esc="wrapped_line" style="float: right;"/>
            </div>
        </t>
    </t>

    <t t-name="OrderChangeReceipt">
        <div class="receipt" style="width: 80mm;">
            <div style="font-size: 75%; text-align: center;"><t t-esc="changes.name" /></div>
            <t t-if="changes.floor || changes.table">
                <br />
                <div style="text-align: center;"><span><t t-esc="changes.floor" /></span> / <span style="font-size: 125%; font-weight: bold;"><t t-esc="changes.table"/></span></div>
            </t>
            <br />
            <br />
            <t t-if="changes.cancelled.length > 0">
                <div style="color: red;">
                    <div style="font-weight: bold; text-align: center;">
                        <span>
                            <span style="font-size: 125%;">CANCELLED </span>
                            <t t-esc='changes.time.hours'/>:<t t-esc='changes.time.minutes'/>
                        </span>
                    </div>
                    <br />
                    <br />
                    <t t-foreach="changes.cancelled" t-as="change">
                        <div>
                            <t t-esc="change.qty"/>
                            <span t-esc="change.name_wrapped[0]" style="float: right;"/>
                        </div>
                        <t t-call="NameWrapped"/>
                        <t t-if="change.note">
                            <div>
                                NOTE
                                <span style="float: right;">...</span>
                            </div>
                            <div><span style="padding-left: 2em;">--- <t t-esc="change.note" /></span></div>
                            <br/>
                        </t>
                    </t>
                    <br />
                    <br />
                </div>
            </t>
            <t t-if="changes.new.length > 0">
                <div style="font-weight: bold; text-align: center;">
                    <span>
                        <span style="font-size: 125%;">NEW </span>
                        <t t-esc='changes.time.hours'/>:<t t-esc='changes.time.minutes'/>
                    </span>
                </div>
                <br />
                <br />
                <t t-foreach="changes.new" t-as="change">
                    <div>
                        <t t-esc="change.qty"/>
                        <span t-esc="change.name_wrapped[0]" style="float: right;"/>
                    </div>
                    <t t-call="NameWrapped"/>
                    <t t-if="change.note">
                        <div>
                            NOTE
                            <span style="float: right;">...</span>
                        </div>
                        <div><span style="padding-left: 2em;">--- <t t-esc="change.note" /></span></div>
                        <br/>
                    </t>
                </t>
                <br />
                <br />
            </t>
        </div>
    </t>

</templates>
