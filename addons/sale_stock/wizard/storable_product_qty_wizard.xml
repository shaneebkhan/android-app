<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="storable_product_qty_wizard" model="ir.ui.view">
        <field name="name">sale.order.line.wizard</field>
        <field name="model">sale.order.line.wizard</field>
        <field name="arch" type="xml">
            <form string="Quantity">
                <field name="product_id" invisible="1"/>
                <group class="col-4">
                    <label for="on_hand_at_date" string="On Hand At Delivery Date" class="text-nowrap"/>
                    <div class="o_row">
                        <field name="on_hand_at_date" decoration-danger="on_hand_at_date &lt; 0" readonly="True"/>
                        <field name="product_uom_id" readonly="1" groups="uom.group_uom"/>
                    </div>
                    <label for="on_hand" string="Available On Hand"/>
                    <div class="o_row">
                        <field name="on_hand" decoration-danger="on_hand &lt; 0"  readonly="True"/>
                        <field name="product_uom_id" readonly="1" groups="uom.group_uom"/>
                    </div>
                </group>
                <group>
                    <button string="Go To Forecasted stock" class="btn btn-link" name="stock.action_stock_level_forecast_report_product"
                    context="{'default_product_id': product_id}"/>
                </group>
                <footer>
                    <button string="OK" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
