<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_so_cancel" model="ir.ui.view">
        <field name="name">Sale Order Cancel</field>
        <field name="model">sale.order.cancel</field>
        <field name="arch" type="xml">
            <form>
                <field name="sale_id" invisible="1"/>
                Are you sure to cancel this sales order? Some products have already been delivered.
                <footer>
                    <button string="Confirm" name="action_cancel" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
