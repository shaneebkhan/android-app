<?xml version="1.0" encoding="utf-8"?>
<templates>
    <we3-dropdown t-name="wysiwyg.buttons.fontsize" name="Font Size">
        <we3-toggler title="Font Size">
            <we3-placeholder>Default</we3-placeholder>
        </we3-toggler>
        <we3-vertical-items direction="vertical">
            <we3-button t-attf-name="size-{{fontSize.toLowerCase()}}" data-method="update" t-att-data-value="fontSize.toLowerCase()" t-foreach="options.fontSizes" t-as="fontSize"><t t-esc="fontSize"/></we3-button>
        </we3-vertical-items>
    </we3-dropdown>

    <t t-name="wysiwyg.buttons.fontstyle">
        <we3-dropdown name="Style">
            <we3-toggler title="Style">
                <i class="fa fa-magic"></i>
            </we3-toggler>
            <we3-vertical-items direction="vertical">
                <t t-foreach="options.styleTags" t-as="styleTag">
                    <we3-button t-attf-name="formatBlock-{{styleTag.value || styleTag}}"
                        data-method="formatBlock" t-att-data-value="styleTag.value || styleTag">
                        <t t-esc="styleTag.title || styleTag"/>
                    </we3-button>
                </t>
            </we3-vertical-items>
        </we3-dropdown>
        <we3-group>
            <we3-button name="formatText-b" data-method="formatText" data-value="b" title="Bold">
                <i class="fa fa-bold"></i>
            </we3-button>
            <we3-button name="formatText-i" data-method="formatText" data-value="i" title="Italic">
                <i class="fa fa-italic"></i>
            </we3-button>
            <we3-button name="formatText-u" data-method="formatText" data-value="u" title="Underline">
                <i class="fa fa-underline"></i>
            </we3-button>
            <we3-button name="formatText-remove" data-method="removeFormat" title="Remove Font Style">
                <i class="fa fa-eraser"></i>
            </we3-button>
        </we3-group>
    </t>

    <we3-group t-name="wysiwyg.buttons.paragraph">
        <we3-dropdown name="Paragraph">
            <we3-toggler title="Paragraph">
                <we3-placeholder>
                    <we3-button name="align-left" title="Float Left">
                        <i class="fa fa-align-left"></i>
                    </we3-button>
                </we3-placeholder>
            </we3-toggler>
            <we3-group>
                <we3-button name="align-left" data-method="align" data-value="left" title="Float Left">
                    <i class="fa fa-align-left"></i>
                </we3-button>
                <we3-button name="align-center" data-method="align" data-value="center" title="Align Center">
                    <i class="fa fa-align-center"></i>
                </we3-button>
                <we3-button name="align-right" data-method="align" data-value="right" title="Float Right">
                    <i class="fa fa-align-right"></i>
                </we3-button>
                <we3-button name="align-justify" data-method="align" data-value="justify" title="Float Justify">
                    <i class="fa fa-align-justify"></i>
                </we3-button>
            </we3-group>
        </we3-dropdown>
    </we3-group>
</templates>
