<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add action entry in the Action Menu for Partners -->
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.sms</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="replace">
                <label for="phone"/>
                <div class="o_row">
                    <field name="phone" widget="phone"/>
                    <button
                        type="action"
                        name="%(sms.sms_composer_action_form)d"
                        class="btn-sm btn-link mb4 fa fa-comment"
                        aria-label="Send SMS Text Message"
                        title="Send SMS Text Message"
                        attrs="{'invisible':[('phone', '=', False)]}"
                        context="{'field_name': 'phone'}" />
                </div>
            </xpath>
            <xpath expr="//field[@name='mobile']" position="replace">
                <label for="mobile"/>
                <div class="o_row">
                    <field name="mobile" widget="phone"/>
                    <button
                        type="action"
                        name="%(sms.sms_composer_action_form)d"
                        class="btn-sm btn-link mb4 fa fa-comment"
                        aria-label="Send SMS Text Message"
                        title="Send SMS Text Message"
                        attrs="{'invisible':[('mobile', '=', False)]}"
                        context="{'field_name': 'mobile'}" />
                </div>
            </xpath>
        </field>
    </record>

    <!-- Add action entry in the Action Menu for Partners -->
    <act_window id="res_partner_act_window_sms_composer"
        name="Send SMS Text Message"
        binding_model="res.partner"
        res_model="sms.composer"
        binding_views="form"
        target="new"
        context="{'default_composition_mode': 'mass'}" />

</odoo>
