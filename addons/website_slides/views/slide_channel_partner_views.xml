<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="slide_channel_partner_view_kanban" model="ir.ui.view">
            <field name="name">slide.channel.partner.kanban</field>
            <field name="model">slide.channel.partner</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban create="false" edit="false" class="o_res_partner_kanban o_kanban_attendees" readonly="1">
                    <field name="user_id"/>
                    <field name="partner_id"/>
                    <field name="partner_email"/>
                    <field name="partner_image_small"/>
                    <field name="channel_id" readonly="1"/>
                    <templates>
                        <t t-name="kanban-box">
                            <t t-if="record.user_id.raw_value != false">
                                <a t-attf-href="/profile/user/#{record.user_id.raw_value}">
                                    <div class="o_kanban_record_has_image_fill o_res_partner_kanban">
                                        <t t-if="record.partner_image_small.raw_value">
                                            <img class="o_kanban_image_inner_pic" t-att-src="kanban_image('res.partner', 'image_small', record.partner_id.raw_value)" t-att-alt="record.partner_id"/>
                                        </t>
                                        <div class="oe_kanban_details">
                                            <strong class="o_kanban_record_title oe_partner_heading"><field name="partner_id"/></strong>
                                            <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                            <ul>
                                                <li><field name="partner_email"/></li>                               
                                            </ul>
                                        </div>
                                    </div>
                                </a>
                            </t>
                            <t t-else="">
                                <div class="o_kanban_record_has_image_fill o_res_partner_kanban">
                                    <t t-if="record.partner_image_small.raw_value">
                                        <img class="o_kanban_image_inner_pic" t-att-src="kanban_image('res.partner', 'image_small', record.partner_id.raw_value)" t-att-alt="record.partner_id"/>
                                    </t>
                                    <div class="oe_kanban_details">
                                        <strong class="o_kanban_record_title oe_partner_heading"><field name="partner_id"/></strong>
                                        <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                        <ul>
                                            <li><field name="partner_email"/></li>                               
                                        </ul>
                                    </div>
                                </div>
                            </t>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="slide_channel_partner_view_search" model="ir.ui.view">
            <field name="name">slide.channel.partner.search</field>
            <field name="model">slide.channel.partner</field>
            <field name="arch" type="xml">
                <search string="Channel Member">
                    <field name="partner_id"/>
                    <field name="partner_email"/>
                    <field name="channel_id"/>
                </search>
            </field>
        </record>

        <record id="slide_channel_partner_action" model="ir.actions.act_window">
            <field name="res_model">slide.channel.partner</field>
            <field name="view_mode">kanban,tree</field>
            <field name="view_id" ref="website_slides.slide_channel_partner_view_kanban"/>
            <field name="search_view_id" ref="website_slides.slide_channel_partner_view_search"/>
            <field name="context">{'group_by': 'channel_id'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    There is no attendee.
                </p>
            </field>
        </record>

        <record id="slide_channel_partner_view_tree" model="ir.ui.view">
            <field name="name">slide.channel.partner.tree</field>
            <field name="model">slide.channel.partner</field>
            <field name="arch" type="xml">
                <tree string="Attendees" editable="top">
                    <field name="create_date"/>
                    <field name="partner_id" string="Contact"/>
                    <field name="partner_email"/>
                    <field name="channel_id" string="Channel" invisible="context.get('default_channel_id',False)" />
                </tree>
            </field>
        </record>
    </data>
</odoo>
