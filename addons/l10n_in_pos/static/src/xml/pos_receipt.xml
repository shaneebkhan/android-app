<?xml version="1.0" encoding="utf-8"?>

<templates id="template" inherit_id="point_of_sale.template">
    <t t-extend="XmlReceipt">
        <t t-jquery="div[class='orderlines'][line-ratio='0.6']" t-operation="before">
            <t t-if="receipt.client">
                <div><t t-esc="receipt.client" /></div>
                <t t-if="receipt.client_phone">
                    <div>Phone: <t t-esc="receipt.client_phone" /></div>
                </t><br />
            </t>
        </t>
        <t t-jquery="line[class='total'][size='double-height']" t-operation="after">
            <t t-if="pos.config.rounded_total">
                <line><right>--------</right></line>
                <line>
                    <left><pre>Rounded Total</pre></left>
                    <right>
                        <value t-att-value-decimals='pos.currency.decimals'>
                            <t t-esc='receipt.total_with_tax_rounded_off' />
                        </value>
                    </right>
                </line>
            </t>
        </t>
    </t>
    <t t-extend="PosTicket">
        <t t-jquery="tr[t-foreach*='receipt.orderlines'][t-as*='line'] td:first t:first" t-operation="after">
            <t t-if="orderline.l10n_in_hsn_code">
                <div class="pos-disc-font">
                    HSN Code: <t t-esc="orderline.l10n_in_hsn_code"/>
                </div>
            </t>
        </t>
        <t t-jquery="div[class='receipt-user']" t-operation="after">
            <t t-if="receipt.client">
                <br /><div>Customer:</div>
                <div>Name: <t t-esc="receipt.client"/><br /></div>
                <t t-if="receipt.client_phone">
                    <div>Phone: <t t-esc="receipt.client_phone"/><br /></div>
                </t>
            </t>
        </t>
        <t t-jquery="table[class='receipt-total'] tr[class='emph']" t-operation="after">
            <t t-if="pos.config.rounded_total">
                <tr>
                    <td>Rounded Total:</td>
                    <td class="pos-right-align">
                        <t t-esc="widget.format_currency(receipt.total_with_tax_rounded_off)"/>
                    </td>
                </tr>
            </t>
        </t>
    </t>
    <t t-extend="XmlReceiptWrappedProductNameLines">
        <t t-jquery="t[t-foreach*='line.product_name_wrapped.slice(1)'][t-as*='wrapped_line']" t-operation="after">
            <t t-if="line.l10n_in_hsn_code">
                <line indent='1'>
                    <left>HSN Code: <t t-esc="line.l10n_in_hsn_code"/></left>
                </line>
            </t>
        </t>
    </t>
</templates>
