<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="pos_config_view_form_inherit_in_pos" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.in.pos</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='receipt']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="rounded_total"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="rounded_total"/>
                        <div class="text-muted">
                            Display rounded total amount on receipt
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
