<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <template id="report_posorder_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
            <t t-set="address">
                <div t-field="doc.partner_id"
                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/></p>
            </t>
            <div class="page">
                <div class="oe_structure"/>
                <h2>
                    <span t-field="doc.name"/>
                </h2>
                <div class="row mt32 mb32" id="informations">
                    <div class="col-auto mw-100 mb-2">
                        <strong>Date:</strong>
                        <p class="m-0" t-field="doc.date_order"/>
                    </div>
                    <div t-if="doc.user_id.name" class="col-auto mw-100 mb-2">
                        <strong>Cashier:</strong>
                        <p class="m-0" t-field="doc.user_id"/>
                    </div>
                </div>
            </div>

            <t t-set="display_discount" t-value="any([l.discount > 0 for l in doc.lines])"/>
            <t t-set="display_tax" t-value="any([l.tax_ids for l in doc.lines])"/>
            <t t-set="amount_subtotal" t-value="0"/>

            <table class="table table-sm o_main_table">
                <thead>
                    <tr>
                        <t t-set="colspan" t-value="5"/>
                        <th class="text-left">Description</th>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">Unit Price</th>
                        <th t-if="display_discount" class="text-right">
                            <span>Disc.(%)</span>
                            <t t-set="colspan" t-value="colspan+1"/>
                        </th>
                        <th t-if="display_tax" class="text-right">
                            <span>Taxes</span>
                            <t t-set="colspan" t-value="colspan+1"/>
                        </th>
                        <th t-if="display_tax" class="text-right">Amount</th>
                    </tr>
                </thead>
                <tbody class="pos_sale_tbody">
                    <t t-foreach="doc.lines" t-as="line">
                        <t t-set="amount_subtotal" t-value="amount_subtotal + line.price_subtotal"/>
                        <tr>
                            <t>
                                <td><span t-field="line.product_id.name"/></td>
                                <td class="text-right">
                                    <span t-field="line.qty"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td t-if="display_discount" class="text-right">
                                    <span t-field="line.discount"/>
                                </td>
                                <td t-if="display_tax" class="text-right">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"/>
                                </td>
                                <t t-if="display_tax">
                                    <td class="text-right">
                                        <span t-field="line.price_subtotal_incl"/>
                                    </td>
                                </t>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>
            <div class="pos_clearfix">
                <div id="total" class="row" name="total">
                    <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                        <table class="table table-sm">
                            <tr class="border-black">
                                <td><strong>Subtotal</strong></td>
                                <td class="text-right">
                                    <span t-esc="amount_subtotal" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                </td>
                            </tr>
                            <tr t-if="display_tax" class="border-black">
                                <td><strong>Taxes</strong></td>
                                <td class="text-right">
                                    <span t-field="doc.amount_tax" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                    <span t-esc="doc.amount_total" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="oe_structure"/>
        </t>
    </template>

    <template id="report_pos_ticket">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="point_of_sale.report_posorder_document" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

</data>
</odoo>
