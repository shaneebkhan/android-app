<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_supplier_form_inherit_l10n_in_multi_unit" model="ir.ui.view">
        <field name="name">account.invoice.supplier.form.inherit.l10n_in_multi_units</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']//field[@name='company_id']" position="after">
                <field name="unit_id" domain="[('company_unit_id', '=', company_id)]" options="{'no_create': True}" groups="l10n_in_multi_units.group_multi_operating_unit"/>
            </xpath>
        </field>
    </record>
    <record id="invoice_form_inherit_l10n_in_multi_unit" model="ir.ui.view">
        <field name="name">invoice.form.inherit.l10n_in_multi_units</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']//field[@name='company_id']" position="after">
                <field name="unit_id" domain="[('company_unit_id', '=', company_id)]" options="{'no_create': True}" groups="l10n_in_multi_units.group_multi_operating_unit"/>
            </xpath>
        </field>
    </record>
</odoo>
