<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_grade_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.grade.form.inherit</field>
        <field name="model">res.partner.grade</field>
        <field name="inherit_id" ref="website_crm_partner_assign.view_partner_grade_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="after">
                <group>
                    <field name="commission_ids" nolabel="1">
                        <form create="1" edit="1">
                            <sheet>
                                <group>
                                    <field name="product_ids" widget="many2many_tags"/>
                                    <field name="rate" widget="percentage"/>
                                </group>
                            </sheet>
                        </form>
                        <tree editable="bottom" create="1" edit="1">
                            <field name="product_ids" widget="many2many_tags" readonly="0"/>
                            <field name="rate" widgte="percentage" readonly="0"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
