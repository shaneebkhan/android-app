<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_confirm_cancel_production_wizard_form" model="ir.ui.view">
        <field name="name">mrp.confirm.cancel.production.form</field>
        <field name="model">mrp.confirm.cancel.production</field>
        <field name="arch" type="xml">
            <form string="Confirm Cancel">
                <div>
                    Some product moves have already been confirmed, those ones will not be cancelled.
                </div>
                <footer>
                    <button string="Confirm" type="object" name="action_done" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
