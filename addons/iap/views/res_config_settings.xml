<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.base.setup.iap</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='multi_company']" position="before">
                <div id="iap_portal">
                    <h2>In-App Purchases</h2> 
                    <div class='row mt16 o_settings_container iap_portal'>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class='oe_link o_setting_right_pane'>
                                <div class="o_form_label">Odoo IAP</div>
                                <div>
                                    <strong><field name ='iap_account_url' widget='url' text='Go To My Portal'/></strong>
                                </div>  
                            </div>
                            
                        </div>
                        
                    </div>
                </div>
                
            </xpath>
            
        </field>
    </record>
</odoo>