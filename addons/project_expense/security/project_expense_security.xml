<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <data noupdate="1">

    	<!-- This rule is required to allow manager to post an expense when timesheet is installed. We
    		don't want to create a small bridge module just for this. Otherwise, manager can only create
    		analytic line with a project (and not juste AAL coming from posting account.move)
    	-->
        <record id="analytic_line_rule_account_manager" model="ir.rule">
            <field name="name">analytic.line.account.manager</field>
            <field name="model_id" ref="analytic.model_account_analytic_line"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('account.group_account_manager'))]"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="perm_read" eval="0"/>
        </record>

	</data>

</odoo>
